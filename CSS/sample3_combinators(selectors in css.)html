<html>
    <head>
        <title>Combinators</title>
        <style>
            /*Element Selector*/
            div{
            width: 400px;
            height: 100px;
            background: red;
            }
            /*Id Selector*/
            #myDiv{
                width: 400px;
                height: 100px;
                background: gray;
            }
            /*Class Selector*/
            .parent{
                width: 400px;
                height: 100px;
                background: green;
            }
            /*Group Selector*/
            div,#myDiv,.parent{
                border:2px solid;
            }
        </style>
    </head>
    <body>
        <div></div>
        <div id="myDiv"></div>
        <div class="parent"></div>
    </body>
</html>